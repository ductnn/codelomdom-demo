extends ../layouts/common.pug

block content
    header.masthead
        .overlay
        .container
            .row
                .col-lg-8.col-md-10.mx-auto
                    .page-heading
                        h1 Create A New Account
        .container
            .row
                .col-md-8.offset-md-2
                    if errors
                        each error in errors
                            .alert.alert-danger= error
                    form(action='/users/create', method='POST', enctype='multipart/form-data')
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label(for="name") Username
                                input#name.form-control(type='text', name='username', placeholder='Username', value=values ? values.username : "")
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label(for="email") Email
                                input#email.form-control(type='email', name='email', placeholder='Email', value=values ? values.email : "")
                        .control-group
                            .form-group.floating-label-form-group.controls
                                label(for="pwd") Password
                                input#pwd.form-control(type='password', name='password', placeholder='Password', value=values ? values.password : "")
                        .form-group.my-4.text-center
                            button.btn.btn-primary Register now 

block foot